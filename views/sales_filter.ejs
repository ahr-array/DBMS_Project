      // Pie Chart: Total Sales Amount
      const pieChartCtx = document.getElementById('salesPieChart').getContext('2d');
      new Chart(pieChartCtx, {
        type: 'pie',
        data: {
          labels: labels,
          datasets: [{
            label: 'Sales Amount',
            data: salesData,
            backgroundColor: [
              'rgba(255, 99, 132, 0.2)',
              'rgba(54, 162, 235, 0.2)',
              'rgba(255, 206, 86, 0.2)',
              'rgba(75, 192, 192, 0.2)',
              'rgba(153, 102, 255, 0.2)',
              'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
              'rgba(255, 99, 132, 1)',
              'rgba(54, 162, 235, 1)',
              'rgba(255, 206, 86, 1)',
              'rgba(75, 192, 192, 1)',
              'rgba(153, 102, 255, 1)',
              'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
          }]
        },
        options: {
          responsive: false,
          plugins: {
            legend: {
              position: 'top',
            },
          }
        }
      });

      // Bar Chart: Total Items Sold
      const barChartCtx = document.getElementById('salesBarChart').getContext('2d');
      new Chart(barChartCtx, {
        type: 'bar',
        data: {
          labels: labels,
          datasets: [{
            label: 'Items Sold',
            data: soldData,
            backgroundColor: 'rgba(54, 162, 235, 0.2)',
            borderColor: 'rgba(54, 162, 235, 1)',
            borderWidth: 1
          }]
        },
        options: {
          responsive: false,
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Items Sold'
              }
            }
          },
          plugins: {
            legend: {
              position: 'top',
            },
            tooltip: {
              callbacks: {
                label: (context) => `Items: ${context.raw}`
              }
            }
          }
        }
      });
    });
  </script>
